{
    "name": "@tryghost/trip-planner",
    "version": "0.0.0",
    "license": "MIT",
    "private": true,
    "files": [
        "dist/"
    ],
    "main": "./dist/trip-planner.umd.cjs",
    "module": "./dist/trip-planner.js",
    "scripts": {
        "dev": "vite build --watch",
        "dev:start": "vite",
        "test": "yarn test:unit",
        "test:unit": "vitest run test/unit",
        "test:watch": "vitest",
        "build": "tsc && vite build",
        "lint": "eslint --ext .js,.ts,.cjs,.tsx --cache src",
        "lint:fix": "eslint --ext .js,.ts,.cjs,.tsx --cache --fix src",
        "preview": "vite preview"
    },
    "devDependencies": {
        "@tanstack/react-query": "4.36.1",
        "@testing-library/jest-dom": "5.17.0",
        "@testing-library/react": "14.3.1",
        "@types/leaflet": "1.9.17",
        "@types/react": "18.3.26",
        "@vitejs/plugin-react": "4.7.0",
        "vite": "5.4.20",
        "vitest": "1.6.1"
    },
    "dependencies": {
        "@tryghost/admin-x-framework": "0.0.0",
        "@tryghost/shade": "0.0.0",
        "leaflet": "1.9.4",
        "react": "18.3.1",
        "react-dom": "18.3.1",
        "react-leaflet": "4.2.1"
    },
    "nx": {
        "targets": {
            "dev": {
                "dependsOn": [
                    "^build"
                ]
            },
            "test:unit": {
                "dependsOn": [
                    "^build"
                ]
            }
        }
    }
}
